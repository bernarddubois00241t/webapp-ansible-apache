---
- name: Apache installation using docker
  hosts: prod
  become: true
  vars:
    ansible_sudo_pass: admin
  
  pre_tasks:
    - name: Install EPEL repo
      ansible.builtin.yum:
        name: epel-release
        state: present
      when: ansible_distribution == "CentOS"
    
    - name: Install Docker engine
      ansible.builtin.yum:
        name: docker
        state: present
    
    - name: Enable and start Docker service
      ansible.builtin.service:
        name: docker
        state: started
        enabled: yes
    
    - name: Ensure docker group exists
      ansible.builtin.group:
        name: docker
        state: present
    
    - name: Add admin user to docker group
      ansible.builtin.user:
        name: admin
        groups: docker
        append: yes
    
    - name: Install docker python from OS package
      ansible.builtin.yum:
        name: python-docker-py
        state: present
    
    - name: Create Docker wrapper script
      ansible.builtin.copy:
        content: |
          #!/bin/bash
          export DOCKER_CONTENT_TRUST=0
          exec docker "$@"
        dest: /usr/local/bin/docker-notrust
        mode: '0755'

  tasks:
    - name: Pull Apache image using wrapper
      ansible.builtin.command: /usr/local/bin/docker-notrust pull httpd:2.4
      become: yes
      register: pull_result
    
    - name: Display pull result
      ansible.builtin.debug:
        var: pull_result
    
    - name: Stop existing webapp container if exists
      ansible.builtin.command: docker stop webapp
      become: yes
      ignore_errors: yes
    
    - name: Remove existing webapp container if exists
      ansible.builtin.command: docker rm webapp
      become: yes
      ignore_errors: yes
    
    - name: Create and start Apache container using wrapper
      ansible.builtin.command: /usr/local/bin/docker-notrust run -d --name webapp -p 80:80 httpd:2.4
      become: yes
      register: container_result
    
    - name: Display container ID
      ansible.builtin.debug:
        var: container_result.stdout
    
    - name: Verify container is running
      ansible.builtin.command: docker ps --filter name=webapp
      become: yes
      register: docker_ps_output
    
    - name: Display container status
      ansible.builtin.debug:
        var: docker_ps_output.stdout_lines
    
    - name: Test Apache locally
      ansible.builtin.command: curl -s http://localhost
      register: apache_test
      ignore_errors: yes
    
    - name: Display Apache response
      ansible.builtin.debug:
        msg: "Apache is responding: {{ apache_test.stdout[:100] if apache_test.rc == 0 else 'Failed to connect' }}"
