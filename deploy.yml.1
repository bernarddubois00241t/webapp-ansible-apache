---
- name: Apache installation using docker
  hosts: prod
  become: true
  vars:
    ansible_sudo_pass: admin

  pre_tasks:
    - name: Install EPEL repo
      ansible.builtin.package:
        name: epel-release
        state: present
      when: ansible_distribution == "CentOS"

    - name: Install python-pip
      ansible.builtin.yum:
        name: python-pip
        state: present
        update_cache: yes

    - name: Install docker python (compatible Python 2.7)
      ansible.builtin.pip:
        name:
          - "docker-py<1.11.0"
          - "requests<2.32.0"

  tasks:
    - name: Create Apache container
      community.docker.docker_container:
        name: webapp
        image: httpd
        ports:
          - "80:80"

