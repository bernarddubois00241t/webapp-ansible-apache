---
- name: Apache installation using docker
  hosts: prod
  become: true
  vars:
    ansible_sudo_pass: admin
  
  pre_tasks:
    - name: Install EPEL repo
      ansible.builtin.yum:
        name: epel-release
        state: present
      when: ansible_distribution == "CentOS"
    
    - name: Install Docker engine
      ansible.builtin.yum:
        name: docker
        state: present
    
    - name: Disable Docker content trust in daemon config
      ansible.builtin.copy:
        content: |
          {
            "content-trust": false
          }
        dest: /etc/docker/daemon.json
        mode: '0644'
    
    - name: Restart Docker to apply config
      ansible.builtin.service:
        name: docker
        state: restarted
        enabled: yes
    
    - name: Ensure docker group exists
      ansible.builtin.group:
        name: docker
        state: present
    
    - name: Add admin user to docker group
      ansible.builtin.user:
        name: admin
        groups: docker
        append: yes
    
    - name: Install docker python from OS package
      ansible.builtin.yum:
        name: python-docker-py
        state: present

  tasks:
    - name: Pull Apache image
      ansible.builtin.command: docker pull httpd:2.4
      become: yes
    
    - name: Stop existing webapp container if exists
      ansible.builtin.shell: docker stop webapp || true
      become: yes
    
    - name: Remove existing webapp container if exists
      ansible.builtin.shell: docker rm webapp || true
      become: yes
    
    - name: Create and start Apache container
      ansible.builtin.command: docker run -d --name webapp -p 80:80 httpd:2.4
      become: yes
