---
- name: Apache installation using docker
  hosts: prod
  become: true
  vars:
    ansible_sudo_pass: admin
  pre_tasks:
    - name: Install EPEL repo
      ansible.builtin.yum:
        name: epel-release
        state: present
      when: ansible_distribution == "CentOS"
    
    - name: Install Docker engine
      ansible.builtin.yum:
        name: docker
        state: present
    
    - name: Enable and start Docker service
      ansible.builtin.service:
        name: docker
        state: started
        enabled: yes
    
    - name: Ensure docker group exists
      ansible.builtin.group:
        name: docker
        state: present
    
    - name: Add admin user to docker group
      ansible.builtin.user:
        name: admin
        groups: docker
        append: yes
    
    - name: Install docker python from OS package
      ansible.builtin.yum:
        name: python-docker-py
        state: present
    
    - name: Disable Docker Content Trust globally
      ansible.builtin.lineinfile:
        path: /etc/environment
        line: 'DOCKER_CONTENT_TRUST=0'
        create: yes
    
    - name: Create docker config directory for root
      ansible.builtin.file:
        path: /root/.docker
        state: directory
        mode: '0755'
    
    - name: Configure Docker to disable content trust for root
      ansible.builtin.copy:
        content: |
          {
            "experimental": false
          }
        dest: /root/.docker/config.json
        mode: '0644'
    
    - name: Create docker config directory for admin user
      ansible.builtin.file:
        path: /home/admin/.docker
        state: directory
        owner: admin
        group: admin
        mode: '0755'
    
    - name: Configure Docker to disable content trust for admin user
      ansible.builtin.copy:
        content: |
          {
            "experimental": false
          }
        dest: /home/admin/.docker/config.json
        owner: admin
        group: admin
        mode: '0644'

  tasks:
    - name: Pull Apache image
      ansible.builtin.command: docker pull httpd:2.4
      become: yes
    
    - name: Stop existing webapp container if exists
      ansible.builtin.command: docker stop webapp
      become: yes
      ignore_errors: yes
    
    - name: Remove existing webapp container if exists
      ansible.builtin.command: docker rm webapp
      become: yes
      ignore_errors: yes
    
    - name: Create and start Apache container
      ansible.builtin.command: docker run -d --name webapp -p 80:80 httpd:2.4
      become: yes
